{
  "name": "QRATUM Development Environment",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-toolsai.jupyter",
        "charliermarsh.ruff",
        "streetsidesoftware.code-spell-checker",
        "tamasfe.even-better-toml",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": true,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "files.exclude": {
          "**/__pycache__": true,
          "**/*.pyc": true,
          ".pytest_cache": true,
          ".ruff_cache": true,
          "venv-*": true
        }
      }
    }
  },
  
  "forwardPorts": [8000, 8001, 8002, 8080],
  
  "portsAttributes": {
    "8000": {
      "label": "QuASIM Backend",
      "onAutoForward": "notify"
    },
    "8001": {
      "label": "QRADLE Service",
      "onAutoForward": "notify"
    },
    "8002": {
      "label": "QRATUM Platform",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Frontend/Dashboard",
      "onAutoForward": "notify"
    }
  },
  
  "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt && pip install -r requirements-prod.txt && pip install flask flask-cors requests",
  
  "remoteUser": "vscode",
  
  "mounts": [
    "source=${localWorkspaceFolder}/.vscode,target=/workspaces/${localWorkspaceFolderBasename}/.vscode,type=bind,consistency=cached"
  ]
}
