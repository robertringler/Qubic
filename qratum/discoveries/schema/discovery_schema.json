{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "title", "hypothesis", "core_mechanism", "formulation", "validation", "industrial_impact", "risk_envelope", "fitness_score", "provenance"],
  "properties": {
    "id": { "type": "string", "pattern": "^QRD-[0-9]{3}$" },
    "title": { "type": "string", "minLength": 10 },
    "hypothesis": { "type": "string", "description": "Formal falsifiable claim" },
    "core_mechanism": { "type": "string", "description": "Causal physics/computation explanation" },
    "formulation": { "type": "object", "properties": {
      "equations": { "type": "array", "items": { "type": "string" } },
      "pseudocode": { "type": "string" },
      "formal_spec": { "type": "string" }
    }},
    "validation": { "type": "object", "properties": {
      "method": { "type": "string", "enum": ["simulation", "analytic", "experimental", "hybrid"] },
      "test_rig": { "type": "string" },
      "expected_outcome": { "type": "string" },
      "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
    }},
    "industrial_impact": { "type": "object", "properties": {
      "application": { "type": "string" },
      "market_sector": { "type": "string" },
      "estimated_value": { "type": "string" }
    }},
    "risk_envelope": { "type": "object", "properties": {
      "failure_modes": { "type": "array", "items": { "type": "string" } },
      "safety_constraints": { "type": "array", "items": { "type": "string" } },
      "mitigation_strategies": { "type": "array", "items": { "type": "string" } }
    }},
    "fitness_score": { "type": "number", "minimum": 0.87, "maximum": 1.0 },
    "provenance": { "type": "object", "properties": {
      "generated_at": { "type": "string", "format": "date-time" },
      "qradle_hash": { "type": "string" },
      "seed": { "type": "integer" },
      "lattice_node": { "type": "string" }
    }}
  }
}
